# FastAPI Manim App Environment Variables

# Application Settings
PROJECT_NAME=FastAPI Manim App
PROJECT_DESCRIPTION="A FastAPI application for generating Manim animations"
VERSION=0.1.0

# API Documentation
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Environment Settings
ENVIRONMENT=development
DEBUG=true

# Log Settings
LOG_LEVEL=INFO
JSON_LOGS=false

# Database Settings
# You can use either DATABASE_URL or individual connection parameters
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/manim_app
# Individual connection parameters (used if DATABASE_URL is not provided)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=manim_app
DATABASE_ECHO=false

# Manim Settings
TEMP_BASE_DIR=temp_manim_jobs
STATIC_VIDEOS_DIR=temp_manim_jobs/public_videos
SERVED_VIDEOS_PATH_PREFIX=/manim_videos 